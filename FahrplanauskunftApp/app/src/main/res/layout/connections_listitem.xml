<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultStartTime"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="10:09"
            android:textColor="@color/standardText"
            android:textSize="@dimen/important" />
        <TextView
            android:id="@+id/resultStartTimeDelay"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=" +1"
            android:textColor="@color/delayGood"
            android:textSize="@dimen/important" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="-"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:textColor="@color/standardText"
            android:textSize="@dimen/important"/>
        <TextView
            android:id="@+id/resultEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="10:33"
            android:textColor="@color/standardText"
            android:textSize="@dimen/important" />
        <TextView
            android:id="@+id/resultEndTimeDelay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginLeft="2dp"
            android:text=" +6"
            android:textColor="@color/delayGood"
            android:textSize="@dimen/important" />
        <TextView
            android:id="@+id/duration"
            android:layout_marginLeft="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="00:24"
            android:textColor="@color/standardText"
            android:textSize="@dimen/standard" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard"
            android:textColor="@color/standardText"
            android:text="U7  -   65  -  U3"/>
    </LinearLayout>
</LinearLayout>